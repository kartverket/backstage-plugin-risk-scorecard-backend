{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kartverket.no/ros/1.0/no/schema.json",
  "title": "ROS",
  "description": "Skjema for risiko- og sårbarhetsanalyser",
  "type": "object",
  "properties": {
    "versjon": {
      "description": "Versjon av analysen",
      "type": "string"
    },
    "skjemaVersjon": {
      "description": "Versjon av skjema",
      "type": "string"
    },
    "scenarier": {
      "type": "array",
      "items": {
        "type": "object",
        "propertyNames": {
          "minLength": 2
        },
        "properties": {
          "ID": { "type": "number" },
          "beskrivelse": {
            "type": "string"
          },
          "url": {
            "$ref": "#/$defs/url"
          },
          "sistEndret": {
            "type": "string",
            "format": "date"
          },
          "trusselaktører": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Datasnok",
                "Hacktivist",
                "Uheldig ansatt",
                "Innside-aktør",
                "Organiserte kriminelle",
                "Terroristorganisasjon",
                "Nasjon/stat"
              ]
            }
          },
          "sårbarheter": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Kompromittert adminbruker",
                "Sårbarhet i avhengighet",
                "Lekket hemmelighet",
                "Feilkonfigurering",
                "Klussing med input",
                "Benekte brukerhandling",
                "Informasjonslekkasje",
                "Tjenestenekt",
                "Rettighetseskalering"
              ]
            }
          },
          "risiko": {
            "$ref": "#/$defs/risiko"
          },
          "tiltak": {
            "type": "array",
            "items": {
              "type": "object",
              "propertyNames": {
                "minLength": 2
              },
              "properties": {
                "ID": { "type": "number" },
                "beskrivelse": {
                  "type": "string"
                },
                "tiltakseier": {
                  "type": "string"
                },
                "frist": {
                  "type": "string",
                  "format": "date"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "Ikke startet",
                    "Startet",
                    "På vent",
                    "Fullført",
                    "Avbrutt"
                  ]
                },
                "restrisiko": {
                  "$ref": "#/$defs/risiko"
                }
              },
              "required": [
                "ID",
                "beskrivelse",
                "tiltakseier",
                "frist",
                "status",
                "restrisiko"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "ID",
          "beskrivelse",
          "sistEndret",
          "trusselaktører",
          "sårbarheter",
          "risiko",
          "tiltak"
        ],
        "additionalProperties": false
      }
    },
    "sops": {
      "type": "object"
    }
  },
  "required": [
    "skjemaVersjon",
    "versjon",
    "scenarier"
  ],
  "additionalProperties": false,
  "$defs": {
    "risiko": {
      "type": "object",
      "properties": {
        "oppsummering": {
          "type": "string"
        },
        "sannsynlighet": {
          "description": "Antall hendelser/dag",
          "type": "number",
          "minimum": 0
        },
        "konsekvens": {
          "description": "Beløp i kroner",
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "sannsynlighet",
        "konsekvens"
      ],
      "additionalProperties": false
    },
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://"
    }
  }
}
